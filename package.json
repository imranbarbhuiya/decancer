{
	"name": "@imranbarbhuiya/decancer",
	"version": "0.2.4",
	"description": "A package to remove zalgo and common confusable characters from strings.",
	"main": "dist/index.js",
	"module": "dist/index.mjs",
	"browser": "dist/index.global.js",
	"unpkg": "dist/index.global.js",
	"types": "dist/index.d.ts",
	"exports": {
		"types": "./dist/index.d.ts",
		"import": "./dist/index.mjs",
		"require": "./dist/index.js"
	},
	"sideEffects": false,
	"license": "MIT",
	"author": "@imranbarbhuiya",
	"scripts": {
		"docs": "typedoc",
		"lint": "eslint . --cache --fix",
		"format": "prettier --write \"{src,tests}/**/*.ts\"",
		"test": "vitest run",
		"test:watch": "vitest",
		"update": "yarn upgrade-interactive",
		"build": "tsup",
		"typecheck": "tsc -p tsconfig.eslint.json",
		"bump": "cliff-jumper",
		"check-update": "cliff-jumper --dry-run",
		"prepack": "yarn build && pinst --disable",
		"postinstall": "husky .github/husky",
		"postpack": "pinst --enable"
	},
	"keywords": [
		"some keywords"
	],
	"publishConfig": {
		"access": "public"
	},
	"dependencies": {
		"unidecode": "^1.1.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.8.0",
		"@commitlint/config-conventional": "^19.8.0",
		"@favware/cliff-jumper": "^6.0.0",
		"@favware/npm-deprecate": "^2.0.0",
		"@types/jsdom": "^21.1.7",
		"@types/unidecode": "^1.1.0",
		"@vitest/coverage-v8": "^3.1.1",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^9.25.0",
		"eslint-config-mahir": "^1.0.7",
		"husky": "^9.1.7",
		"jsdom": "^26.1.0",
		"lint-staged": "^15.5.1",
		"pinst": "^3.0.0",
		"prettier": "^3.5.3",
		"pretty-quick": "^4.1.1",
		"tsup": "^8.4.0",
		"typedoc": "^0.28.3",
		"typescript": "^5.8.3",
		"vitest": "^3.1.1"
	},
	"files": [
		"dist/**/*.js*",
		"dist/**/*.mjs*",
		"dist/**/*.d*"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/imranbarbhuiya/decancer.git"
	},
	"bugs": {
		"url": "https://github.com/imranbarbhuiya/decancer/issues"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"lint-staged": {
		"*.{mjs,js,ts}": "eslint --fix"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"resolutions": {
		"ansi-regex": "^5.0.1",
		"minimist": "^1.2.8"
	},
	"packageManager": "yarn@4.9.1"
}
